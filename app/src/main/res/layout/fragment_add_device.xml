<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/save">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_15"
                    android:layout_marginTop="@dimen/padding_15"
                    android:layout_marginRight="@dimen/padding_15"
                    android:background="@drawable/edit_bg_acc9">

                    <TextView
                        android:id="@+id/tv_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableRight="@mipmap/ic_xinghao"
                        android:paddingLeft="@dimen/padding_15"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:text="设备品牌"
                        android:textColor="@color/acc3"
                        android:textSize="@dimen/text_size_14" />

                    <TextView
                        android:id="@+id/brand"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_toLeftOf="@+id/tv_1"
                        android:background="@null"
                        android:ellipsize="end"
                        android:gravity="right"
                        android:hint="请输入"
                        android:paddingLeft="@dimen/padding_15"
                        android:paddingTop="12dp"
                        android:paddingRight="@dimen/padding_15"
                        android:paddingBottom="12dp"
                        android:singleLine="true"
                        android:textColor="@color/acc3"
                        android:textSize="@dimen/text_size_14" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_15"
                    android:layout_marginTop="@dimen/padding_15"
                    android:layout_marginRight="@dimen/padding_15"
                    android:background="@drawable/edit_bg_acc9">

                    <TextView
                        android:id="@+id/tv_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableRight="@mipmap/ic_xinghao"
                        android:paddingLeft="@dimen/padding_15"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:text="设备型号"
                        android:textColor="@color/acc3"
                        android:textSize="@dimen/text_size_14" />

                    <EditText
                        android:id="@+id/model"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_toLeftOf="@+id/tv_2"
                        android:background="@null"
                        android:ellipsize="end"
                        android:gravity="right"
                        android:hint="请输入"
                        android:paddingLeft="@dimen/padding_15"
                        android:paddingTop="12dp"
                        android:paddingRight="@dimen/padding_15"
                        android:paddingBottom="12dp"
                        android:singleLine="true"
                        android:textColor="@color/acc3"
                        android:textSize="@dimen/text_size_14" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_15"
                    android:layout_marginTop="@dimen/padding_15"
                    android:layout_marginRight="@dimen/padding_15"
                    android:background="@drawable/edit_bg_acc9">

                    <TextView
                        android:id="@+id/tv_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableRight="@mipmap/ic_xinghao"
                        android:paddingLeft="@dimen/padding_15"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:text="设备名称"
                        android:textColor="@color/acc3"
                        android:textSize="@dimen/text_size_14" />

                    <EditText
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_toLeftOf="@+id/tv_3"
                        android:background="@null"
                        android:ellipsize="end"
                        android:gravity="right"
                        android:hint="如：挖机01"
                        android:paddingLeft="@dimen/padding_15"
                        android:paddingTop="12dp"
                        android:paddingRight="@dimen/padding_15"
                        android:paddingBottom="12dp"
                        android:singleLine="true"
                        android:textColor="@color/acc3"
                        android:textSize="@dimen/text_size_14" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_15"
                    android:layout_marginTop="@dimen/padding_15"
                    android:layout_marginRight="@dimen/padding_15"
                    android:background="@drawable/edit_bg_acc9">

                    <TextView
                        android:id="@+id/tv_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableRight="@mipmap/ic_xinghao"
                        android:paddingLeft="@dimen/padding_15"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:text="设备序列号"
                        android:textColor="@color/acc3"
                        android:textSize="@dimen/text_size_14" />

                    <EditText
                        android:id="@+id/no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_toLeftOf="@+id/tv_5"
                        android:background="@null"
                        android:ellipsize="end"
                        android:gravity="right"
                        android:hint="请输入"
                        android:paddingLeft="@dimen/padding_15"
                        android:paddingTop="12dp"
                        android:paddingRight="@dimen/padding_15"
                        android:paddingBottom="12dp"
                        android:singleLine="true"
                        android:textColor="@color/acc3"
                        android:textSize="@dimen/text_size_14" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_15"
                    android:layout_marginTop="@dimen/padding_15"
                    android:layout_marginRight="@dimen/padding_15"
                    android:background="@drawable/edit_bg_acc9">

                    <TextView
                        android:id="@+id/tv_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableRight="@mipmap/ic_xinghao"
                        android:paddingLeft="@dimen/padding_15"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:text="出厂时间"
                        android:textColor="@color/acc3"
                        android:textSize="@dimen/text_size_14" />

                    <TextView
                        android:id="@+id/data"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_toLeftOf="@+id/tv_4"
                        android:ellipsize="end"
                        android:hint="请选择"
                        android:paddingLeft="@dimen/padding_15"
                        android:paddingTop="12dp"
                        android:paddingRight="@dimen/padding_15"
                        android:paddingBottom="12dp"
                        android:singleLine="true"
                        android:textColor="@color/acc3"
                        android:textSize="@dimen/text_size_14" />
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_15"
                    android:layout_marginTop="@dimen/padding_15"
                    android:layout_marginBottom="@dimen/padding_10"
                    android:text="上传挖掘机照片"
                    android:textColor="@color/acc3"
                    android:textSize="@dimen/text_size_14" />

                <com.jhhscm.platform.views.selector.ImageSelector
                    android:id="@+id/isSchemeImage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_15"
                    android:layout_marginTop="@dimen/padding_10"
                    android:layout_marginRight="@dimen/padding_15"
                    app:colum_num="3"
                    app:image_num="9"
                    app:with_camera="true"></com.jhhscm.platform.views.selector.ImageSelector>

            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>

        <TextView
            android:id="@+id/save"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/padding_15"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginRight="@dimen/padding_15"
            android:layout_marginBottom="@dimen/dp_5"
            android:background="@drawable/button_c397"
            android:gravity="center"
            android:text="保存"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_16"
            android:textStyle="bold" />
    </RelativeLayout>
</layout>