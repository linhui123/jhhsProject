<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:roundiv="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingTop="@dimen/padding_10">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_15"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="@dimen/padding_10">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="设备名称"
                android:textColor="@color/acc3"
                android:textSize="@dimen/text_size_14"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="使用中"
                android:textColor="@color/ff1a"
                android:textSize="@dimen/text_size_14" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/de" />

        <RelativeLayout
            android:id="@+id/rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_white"
            android:paddingLeft="@dimen/padding_15"
            android:paddingTop="@dimen/padding_10"
            android:paddingRight="@dimen/padding_15"
            android:paddingBottom="@dimen/padding_15">

            <RelativeLayout
                android:id="@+id/rl_im"
                android:layout_width="128dp"
                android:layout_height="90dp">

                <com.jhhscm.platform.views.OvalImageView
                    android:id="@+id/im"
                    android:layout_width="128dp"
                    android:layout_height="90dp"
                    android:layout_centerVertical="true"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_site"
                    roundiv:left_bottom_radius1="5dp"
                    roundiv:left_top_radius1="5dp"
                    roundiv:right_bottom_radius1="5dp"
                    roundiv:right_top_radius1="5dp" />

                <TextView
                    android:id="@+id/num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="@dimen/dp_5"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:background="@drawable/button_pure"
                    android:padding="@dimen/dp_5"
                    android:text="1张"
                    android:textColor="@color/white"
                    android:visibility="invisible" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/padding_10"
                android:layout_toRightOf="@+id/rl_im"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="品牌："
                    android:textColor="@color/acc3"
                    android:textSize="@dimen/text_size_14" />

                <TextView
                    android:id="@+id/tv_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="型号："
                    android:textColor="@color/acc3"
                    android:textSize="@dimen/text_size_14" />

                <TextView
                    android:id="@+id/tv_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="设备序列号："
                    android:textColor="@color/acc3"
                    android:textSize="@dimen/text_size_14" />

                <TextView
                    android:id="@+id/tv_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_3"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="出厂时间："
                    android:textColor="@color/acc3"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal"
            android:weightSum="4">
            <!--租赁-融资-->
            <TextView
                android:id="@+id/tv_func_1"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_15"
                android:layout_marginRight="@dimen/padding_10"
                android:layout_weight="1"
                android:background="@drawable/edit_bg_397"
                android:gravity="center"
                android:padding="@dimen/dp_5"
                android:text="融资"
                android:textColor="@color/a397"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:id="@+id/tv_func_2"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_10"
                android:layout_marginRight="@dimen/padding_10"
                android:layout_weight="1"
                android:background="@drawable/edit_bg_397"
                android:gravity="center"
                android:padding="@dimen/dp_5"
                android:text="卖车"
                android:textColor="@color/a397"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:id="@+id/tv_func_3"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_10"
                android:layout_marginRight="@dimen/padding_10"
                android:layout_weight="1"
                android:background="@drawable/edit_bg_397"
                android:gravity="center"
                android:padding="@dimen/dp_5"
                android:text="编辑"
                android:textColor="@color/a397"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:id="@+id/tv_func_4"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_10"
                android:layout_marginRight="@dimen/padding_15"
                android:layout_weight="1"
                android:background="@drawable/edit_bg_397"
                android:gravity="center"
                android:padding="@dimen/dp_5"
                android:text="删除"
                android:textColor="@color/a397"
                android:textSize="@dimen/text_size_14" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_10"
            android:layout_marginTop="@dimen/padding_15"
            android:background="@color/cf5" />
    </LinearLayout>

</layout>