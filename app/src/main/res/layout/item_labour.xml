<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/padding_15"
        android:paddingTop="@dimen/dp_3"
        android:paddingRight="@dimen/padding_15"
        android:paddingBottom="@dimen/padding_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="招聘"
                android:textColor="@color/acc3"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp_5"
                android:text="正手挖掘机操作员"
                android:textColor="@color/acc3"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_10"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/ic_jia"
                android:drawablePadding="@dimen/dp_5"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="福建省 福州市"
                android:textColor="@color/acc3"
                android:textSize="@dimen/text_size_12" />

            <TextView
                android:id="@+id/tv_gangwei"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_10"
                android:drawableLeft="@mipmap/ic_jia"
                android:drawablePadding="@dimen/dp_5"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="操作手/驾驶员"
                android:textColor="@color/acc3"
                android:textSize="@dimen/text_size_12" />

            <TextView
                android:id="@+id/tv_jingyan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_10"
                android:drawableLeft="@mipmap/ic_jia"
                android:drawablePadding="@dimen/dp_5"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="1年以上"
                android:textColor="@color/acc3"
                android:textSize="@dimen/text_size_12" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_10">

            <TextView
                android:id="@+id/tv_xinzi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="300-400元/天"
                android:textColor="@color/ff1a"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tv_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="2019-07-23"
                android:textColor="@color/acc9"
                android:textSize="@dimen/text_size_12" />
        </RelativeLayout>
    </LinearLayout>
</layout>