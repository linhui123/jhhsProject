<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rl_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blue_txt">

            <TextView
                android:id="@+id/city_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="福州"
                android:textColor="@color/colorPrimary"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/wether_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/city_text"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@mipmap/qingtian_bg"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:id="@+id/wether_temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/wether_img"
                android:text="20"
                android:textColor="@color/white"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/wether_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/wether_temperature"
                android:layout_alignLeft="@+id/wether_temperature"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="@dimen/dp_5"
                android:text="6/28"
                android:textColor="@color/white"
                android:textSize="12dp" />

            <EditText
                android:id="@+id/home_eidt"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_toLeftOf="@+id/msg_img"
                android:layout_toRightOf="@+id/wether_date"
                android:background="@drawable/edit_shpape_bg"
                android:hint="严选车"
                android:paddingLeft="12dp"
                android:textSize="12dp" />

            <ImageView
                android:id="@+id/msg_img"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@mipmap/ic_info" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@+id/rl_top"
            android:background="@drawable/home_bg" />

        <com.jhhscm.platform.views.recyclerview.WrappedRecyclerView
            android:id="@+id/wrv_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/rl_top"></com.jhhscm.platform.views.recyclerview.WrappedRecyclerView>

        <ImageView
            android:id="@+id/tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="50dp"
            android:animateLayoutChanges="true"
            android:src="@mipmap/ic_tel_red" />

    </RelativeLayout>
</layout>