<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/tv_next">

            <LinearLayout
                android:id="@+id/ll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingBottom="@dimen/padding_15">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_5"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="25dp"
                        android:layout_marginRight="30dp"
                        android:background="@drawable/bg_397_ovel" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="17dp"
                        android:layout_marginTop="15dp"
                        android:src="@mipmap/ic_lessee_ring" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_10"
                    android:layout_marginBottom="@dimen/padding_15">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="个人信息"
                        android:textColor="@color/acc3"
                        android:textSize="@dimen/text_size_16"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="设备信息"
                        android:textColor="@color/acc9"
                        android:textSize="@dimen/text_size_16" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        android:text="相关资料"
                        android:textColor="@color/acc9"
                        android:textSize="@dimen/text_size_16" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@color/cf5" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_15"
                    android:layout_marginTop="@dimen/padding_15"
                    android:layout_marginRight="@dimen/padding_15"
                    android:background="@drawable/edit_bg_acc9">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableRight="@mipmap/ic_xinghao"
                        android:paddingLeft="@dimen/padding_15"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:text="姓名"
                        android:textColor="@color/acc3"
                        android:textSize="@dimen/text_size_16" />

                    <EditText
                        android:id="@+id/et_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:gravity="right"
                        android:hint="请输入"
                        android:maxLength="20"
                        android:paddingLeft="@dimen/padding_15"
                        android:paddingTop="12dp"
                        android:paddingRight="@dimen/padding_15"
                        android:paddingBottom="12dp"
                        android:textColor="@color/acc3"
                        android:textSize="@dimen/text_size_16" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_15"
                    android:layout_marginTop="@dimen/padding_15"
                    android:layout_marginRight="@dimen/padding_15"
                    android:background="@drawable/edit_bg_acc9">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableRight="@mipmap/ic_xinghao"
                        android:paddingLeft="@dimen/padding_15"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:text="性别"
                        android:textColor="@color/acc3"
                        android:textSize="@dimen/text_size_16" />

                    <TextView
                        android:id="@+id/tv_sex"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:hint="请选择"
                        android:paddingLeft="@dimen/padding_15"
                        android:paddingTop="12dp"
                        android:paddingRight="@dimen/padding_15"
                        android:paddingBottom="12dp"
                        android:textColor="@color/acc3"
                        android:textSize="@dimen/text_size_16" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_15"
                    android:layout_marginTop="@dimen/padding_15"
                    android:layout_marginRight="@dimen/padding_15"
                    android:background="@drawable/edit_bg_acc9">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableRight="@mipmap/ic_xinghao"
                        android:paddingLeft="@dimen/padding_15"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:text="身份证号"
                        android:textColor="@color/acc3"
                        android:textSize="@dimen/text_size_16" />

                    <EditText
                        android:id="@+id/et_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:digits="1234567890xyXY"
                        android:gravity="right"
                        android:hint="请输入"
                        android:paddingLeft="@dimen/padding_15"
                        android:paddingTop="12dp"
                        android:paddingRight="@dimen/padding_15"
                        android:paddingBottom="12dp"
                        android:textColor="@color/acc3"
                        android:textSize="@dimen/text_size_16" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_15"
                    android:layout_marginTop="@dimen/padding_15"
                    android:layout_marginRight="@dimen/padding_15"
                    android:background="@drawable/edit_bg_acc9">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableRight="@mipmap/ic_xinghao"
                        android:paddingLeft="@dimen/padding_15"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:text="婚姻情况"
                        android:textColor="@color/acc3"
                        android:textSize="@dimen/text_size_16" />

                    <TextView
                        android:id="@+id/tv_marray"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:hint="请选择"
                        android:paddingLeft="@dimen/padding_15"
                        android:paddingTop="12dp"
                        android:paddingRight="@dimen/padding_15"
                        android:paddingBottom="12dp"
                        android:textColor="@color/acc3"
                        android:textSize="@dimen/text_size_16" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_15"
                    android:layout_marginTop="@dimen/padding_15"
                    android:layout_marginRight="@dimen/padding_15"
                    android:background="@drawable/edit_bg_acc9">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableRight="@mipmap/ic_xinghao"
                        android:paddingLeft="@dimen/padding_15"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:text="手机号码"
                        android:textColor="@color/acc3"
                        android:textSize="@dimen/text_size_16" />

                    <EditText
                        android:id="@+id/et_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:gravity="right"
                        android:inputType="number"
                        android:hint="请输入"
                        android:paddingLeft="@dimen/padding_15"
                        android:paddingTop="12dp"
                        android:paddingRight="@dimen/padding_15"
                        android:paddingBottom="12dp"
                        android:textColor="@color/acc3"
                        android:textSize="@dimen/text_size_16" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_15"
                    android:layout_marginTop="@dimen/padding_15"
                    android:layout_marginRight="@dimen/padding_15"
                    android:background="@drawable/edit_bg_acc9">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableRight="@mipmap/ic_xinghao"
                        android:paddingLeft="@dimen/padding_15"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:text="通讯地址"
                        android:textColor="@color/acc3"
                        android:textSize="@dimen/text_size_16" />

                    <TextView
                        android:id="@+id/et_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:gravity="right"
                        android:hint="请选择"
                        android:maxLines="2"
                        android:paddingLeft="@dimen/padding_15"
                        android:paddingTop="12dp"
                        android:paddingRight="@dimen/padding_15"
                        android:paddingBottom="12dp"
                        android:textColor="@color/acc3"
                        android:textSize="@dimen/text_size_16" />
                </LinearLayout>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>

        <TextView
            android:id="@+id/tv_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/padding_15"
            android:layout_marginRight="@dimen/padding_15"
            android:layout_marginBottom="@dimen/dp_5"
            android:background="@drawable/button_c397"
            android:gravity="center"
            android:paddingTop="@dimen/padding_10"
            android:paddingBottom="@dimen/padding_10"
            android:text="下一步"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_16" />
    </RelativeLayout>


</layout>