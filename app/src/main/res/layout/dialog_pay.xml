<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white"
        android:orientation="vertical"
        android:paddingTop="@dimen/padding_10"
        android:paddingBottom="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/im_close"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:src="@mipmap/ic_close" />
        </RelativeLayout>

        <EditText
            android:id="@+id/num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="@dimen/padding_15"
            android:layout_marginRight="25dp"
            android:background="@drawable/edit_bg_acc9"
            android:hint="请输入付款金额(元)"
            android:inputType="number"
            android:padding="@dimen/padding_10"
            android:textColor="@color/acc3"
            android:textSize="@dimen/text_size_16"
            android:visibility="gone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="@dimen/padding_15"
            android:layout_marginRight="25dp"
            android:text="在线支付成功后，需等待财务结算后才会更新数据"
            android:textSize="@dimen/text_size_16"
            android:textColor="@color/ff1a" />

        <RelativeLayout
            android:id="@+id/rl_ali"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_top"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="25dp"
            android:paddingTop="@dimen/padding_10"
            android:paddingBottom="@dimen/padding_10">

            <TextView
                android:id="@+id/tv_ali"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/ic_pay_ali"
                android:drawablePadding="@dimen/padding_10"
                android:text="支付宝支付"
                android:textColor="@color/acc3"
                android:textSize="@dimen/text_size_16" />

            <ImageView
                android:id="@+id/im_ali"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@mipmap/ic_shoping_s1" />
        </RelativeLayout>

        <View
            style="@style/view_h_de"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp" />

        <RelativeLayout
            android:id="@+id/rl_wx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_ali"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="25dp"
            android:paddingTop="@dimen/padding_10"
            android:paddingBottom="@dimen/padding_10">

            <TextView
                android:id="@+id/tv_wx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/ic_pay_weixin"
                android:drawablePadding="@dimen/padding_10"
                android:text="微信支付"
                android:textColor="@color/acc3"
                android:textSize="@dimen/text_size_16" />

            <ImageView
                android:id="@+id/im_wx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@mipmap/ic_shoping_s" />
        </RelativeLayout>

        <View
            style="@style/view_h_de"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp" />

        <TextView
            android:id="@+id/tv_pay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/button_c397"
            android:gravity="center"
            android:padding="@dimen/padding_10"
            android:text="去还款"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_16" />

    </LinearLayout>
</layout>