<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/padding_15">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginTop="@dimen/padding_15"
            android:layout_marginBottom="@dimen/padding_15"
            android:textColor="@color/cf5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_15"
            android:layout_marginRight="@dimen/padding_15"
            android:background="@drawable/edit_bg_acc9">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@mipmap/ic_xinghao"
                android:paddingLeft="@dimen/padding_15"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:text="设备名称"
                android:textColor="@color/acc3"
                android:textSize="@dimen/text_size_16" />

            <EditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="right"
                android:hint="请输入"
                android:paddingLeft="@dimen/padding_15"
                android:paddingTop="12dp"
                android:paddingRight="@dimen/padding_15"
                android:paddingBottom="12dp"
                android:textColor="@color/acc3"
                android:textSize="@dimen/text_size_16" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_15"
            android:layout_marginTop="@dimen/padding_15"
            android:layout_marginRight="@dimen/padding_15"
            android:background="@drawable/edit_bg_acc9">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@mipmap/ic_xinghao"
                android:paddingLeft="@dimen/padding_15"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:text="设备品牌"
                android:textColor="@color/acc3"
                android:textSize="@dimen/text_size_16" />

            <TextView
                android:id="@+id/tv_brand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:hint="请选择"
                android:paddingLeft="@dimen/padding_15"
                android:paddingTop="12dp"
                android:paddingRight="@dimen/padding_15"
                android:paddingBottom="12dp"
                android:textColor="@color/acc3"
                android:textSize="@dimen/text_size_16" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_15"
            android:layout_marginTop="@dimen/padding_15"
            android:layout_marginRight="@dimen/padding_15"
            android:background="@drawable/edit_bg_acc9">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@mipmap/ic_xinghao"
                android:paddingLeft="@dimen/padding_15"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:text="型号"
                android:textColor="@color/acc3"
                android:textSize="@dimen/text_size_16" />

            <EditText
                android:id="@+id/et_xinghao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="right"
                android:hint="请输入"
                android:paddingLeft="@dimen/padding_15"
                android:paddingTop="12dp"
                android:paddingRight="@dimen/padding_15"
                android:paddingBottom="12dp"
                android:textColor="@color/acc3"
                android:textSize="@dimen/text_size_16" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_15"
            android:layout_marginTop="@dimen/padding_15"
            android:layout_marginRight="@dimen/padding_15"
            android:background="@drawable/edit_bg_acc9">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@mipmap/ic_xinghao"
                android:paddingLeft="@dimen/padding_15"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:text="出产日期"
                android:textColor="@color/acc3"
                android:textSize="@dimen/text_size_16" />

            <TextView
                android:id="@+id/tv_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:hint="请选择"
                android:paddingLeft="@dimen/padding_15"
                android:paddingTop="12dp"
                android:paddingRight="@dimen/padding_15"
                android:paddingBottom="12dp"
                android:textColor="@color/acc3"
                android:textSize="@dimen/text_size_16" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_15"
            android:layout_marginTop="@dimen/padding_15"
            android:layout_marginRight="@dimen/padding_15"
            android:background="@drawable/edit_bg_acc9">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@mipmap/ic_xinghao"
                android:paddingLeft="@dimen/padding_15"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:text="设备序列号"
                android:textColor="@color/acc3"
                android:textSize="@dimen/text_size_16" />

            <EditText
                android:id="@+id/et_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="right"
                android:hint="请输入"
                android:paddingLeft="@dimen/padding_15"
                android:paddingTop="12dp"
                android:paddingRight="@dimen/padding_15"
                android:paddingBottom="12dp"
                android:textColor="@color/acc3"
                android:textSize="@dimen/text_size_16" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_15"
            android:layout_marginTop="@dimen/padding_15"
            android:layout_marginRight="@dimen/padding_15"
            android:background="@drawable/edit_bg_acc9">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@mipmap/ic_xinghao"
                android:paddingLeft="@dimen/padding_15"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:text="销售单价"
                android:textColor="@color/acc3"
                android:textSize="@dimen/text_size_16" />

            <EditText
                android:id="@+id/et_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="right"
                android:hint="请输入"
                android:paddingLeft="@dimen/padding_15"
                android:paddingTop="12dp"
                android:paddingRight="@dimen/padding_15"
                android:paddingBottom="12dp"
                android:textColor="@color/acc3"
                android:textSize="@dimen/text_size_16" />
        </LinearLayout>
    </LinearLayout>
</layout>