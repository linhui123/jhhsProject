<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item_slide"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentRight="true"
            android:background="#ff565b"
            android:gravity="center"
            android:text="删 除"
            android:textColor="#ffffff"
            android:textSize="16sp" />

        <RelativeLayout
            android:id="@+id/rl"
            android:layout_width="match_parent"
            android:tag="slide_flag"
            android:clickable="true"
            android:layout_height="100dp">

            <RelativeLayout
                android:id="@+id/rl_new"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/white"
                android:paddingLeft="@dimen/padding_15"
                android:paddingTop="@dimen/dp_3"
                android:paddingRight="@dimen/padding_15"
                android:paddingBottom="@dimen/padding_10"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/im_new"
                    android:layout_width="128dp"
                    android:layout_height="90dp"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_launcher" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_10"
                    android:layout_toRightOf="@+id/im_new"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_new_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="三一重工SY365H挖掘机"
                        android:textColor="@color/acc3"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/tv_new_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_5"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="铲斗容量：0.26 m"
                        android:textColor="@color/acc9"
                        android:textSize="@dimen/text_size_12" />

                    <TextView
                        android:id="@+id/tv_new_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_3"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="额定功率：44/2200 km/rpm"
                        android:textColor="@color/acc9"
                        android:textSize="@dimen/text_size_12" />

                    <TextView
                        android:id="@+id/tv_new_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding_10"
                        android:background="@drawable/edit_bg_397"
                        android:paddingLeft="@dimen/padding_10"
                        android:paddingRight="@dimen/padding_10"
                        android:text="询价"
                        android:textColor="@color/a397"
                        android:textSize="@dimen/text_size_12" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_old"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/white"
                android:paddingLeft="@dimen/padding_15"
                android:paddingTop="@dimen/dp_3"
                android:paddingRight="@dimen/padding_15"
                android:paddingBottom="@dimen/dp_5"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/im_old"
                    android:layout_width="128dp"
                    android:layout_height="90dp"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_launcher" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_10"
                    android:layout_toRightOf="@+id/im_old"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_old_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="三一重工SY365H挖掘机"
                        android:textColor="@color/acc3"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/tv_old_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_5"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="铲斗容量：0.26 m"
                        android:textColor="@color/acc9"
                        android:textSize="@dimen/text_size_12" />

                    <TextView
                        android:id="@+id/tv_old_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_3"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="65万 首付32.5万"
                        android:textColor="@color/ff1a"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/tv_old_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_5"
                        android:background="@drawable/edit_bg_397"
                        android:paddingLeft="@dimen/padding_10"
                        android:paddingRight="@dimen/padding_10"
                        android:text="询价"
                        android:textColor="@color/a397"
                        android:textSize="@dimen/text_size_12" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_peijian"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/white"
                android:paddingLeft="@dimen/padding_15"
                android:paddingTop="@dimen/dp_3"
                android:paddingRight="@dimen/padding_15"
                android:paddingBottom="@dimen/padding_10"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/im_peijian"
                    android:layout_width="128dp"
                    android:layout_height="90dp"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_launcher" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_marginLeft="@dimen/padding_10"
                    android:layout_toRightOf="@+id/im_peijian"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_peijian_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:text="三一重工SY365H挖掘机"
                        android:textColor="@color/acc3"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/tv_peijian_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/tv_peijian_3"
                        android:layout_marginTop="@dimen/dp_5"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="￥55.00"
                        android:textColor="@color/ff1a"
                        android:textSize="@dimen/text_size_14" />

                    <TextView
                        android:id="@+id/tv_peijian_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="@dimen/padding_10"
                        android:text="已售出 250件"
                        android:textColor="@color/acc9"
                        android:textSize="@dimen/text_size_12" />
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</layout>