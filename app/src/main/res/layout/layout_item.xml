<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_5"
    android:layout_marginBottom="@dimen/dp_5">

    <TextView
        android:id="@+id/item_slide"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_alignParentRight="true"
        android:background="#ff565b"
        android:gravity="center"
        android:text="删 除"
        android:textColor="#ffffff"
        android:textSize="16sp" />

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:clickable="true"
        android:paddingTop="@dimen/dp_5"
        android:paddingBottom="@dimen/dp_5"
        android:layout_height="90dp"
        android:background="@color/white"
        android:paddingLeft="@dimen/padding_10"
        android:paddingRight="@dimen/padding_10"
        android:tag="slide_flag">

        <ImageView
            android:id="@+id/tv_select"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_centerVertical="true"
            android:background="@mipmap/ic_shoping_s" />

        <ImageView
            android:id="@+id/im"
            android:layout_width="128dp"
            android:layout_height="90dp"
            android:layout_marginLeft="@dimen/padding_10"
            android:layout_toRightOf="@+id/tv_select"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_10"
            android:layout_marginRight="@dimen/padding_10"
            android:layout_toRightOf="@+id/im"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="配件名称配件名称配件名称配件名称配件名称"
            android:textColor="@color/acc3"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/padding_10"
            android:layout_marginRight="@dimen/padding_10"
            android:layout_toRightOf="@+id/im"
            android:text="￥55.00"
            android:textColor="@color/ff1a"
            android:textSize="@dimen/sp_14" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/padding_10">

            <ImageView
                android:id="@+id/im_jian"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@mipmap/ic_jian" />

            <TextView
                android:id="@+id/tv_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_10"
                android:layout_marginRight="@dimen/padding_10"
                android:text="3"
                android:textColor="@color/acc3"
                android:textSize="@dimen/text_size_12" />

            <ImageView
                android:id="@+id/im_jia"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@mipmap/ic_jia" />


        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>