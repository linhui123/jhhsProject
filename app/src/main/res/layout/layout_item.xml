<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:roundiv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/id_back"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginLeft="0dp"
        android:gravity="right">

        <Button
            android:id="@+id/btn_delete"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:background="@color/ff1a"
            android:gravity="center"
            android:text="删除"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:textStyle="bold" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/id_front"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/white"
        android:clickable="true"
        android:paddingLeft="@dimen/padding_15"
        android:paddingTop="@dimen/dp_5"
        android:paddingRight="@dimen/padding_15"
        android:paddingBottom="@dimen/dp_5">

        <CheckBox
            android:id="@+id/item_chlid_check"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_centerVertical="true"
            android:background="@drawable/check_cast"
            android:button="@android:color/transparent" />

        <com.jhhscm.platform.views.OvalImageView
            android:id="@+id/im"
            android:layout_width="128dp"
            android:layout_height="90dp"
            android:layout_marginLeft="@dimen/padding_10"
            android:layout_toRightOf="@+id/item_chlid_check"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_site"
            roundiv:left_bottom_radius1="5dp"
            roundiv:left_top_radius1="5dp"
            roundiv:right_bottom_radius1="5dp"
            roundiv:right_top_radius1="5dp" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_10"
            android:layout_marginRight="@dimen/padding_10"
            android:layout_toRightOf="@+id/im"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="配件名称配件名称配件名称配件名称配件名称"
            android:textColor="@color/acc3"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/padding_10"
            android:layout_marginRight="@dimen/padding_10"
            android:layout_marginBottom="@dimen/dp_3"
            android:layout_toRightOf="@+id/im"
            android:text="￥55.00"
            android:textColor="@color/ff1a"
            android:textSize="@dimen/sp_14" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/padding_10"
            android:layout_marginBottom="@dimen/dp_3">

            <ImageView
                android:id="@+id/im_jian"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/ic_jian" />

            <TextView
                android:id="@+id/tv_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_10"
                android:layout_marginRight="@dimen/padding_10"
                android:gravity="center"
                android:text="3"
                android:textColor="@color/acc3"
                android:textSize="@dimen/text_size_12" />

            <ImageView
                android:id="@+id/im_jia"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/ic_jia" />


        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>