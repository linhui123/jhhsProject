<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/im_bg"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_sale_banner" />

        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/im_bg"
            android:layout_marginLeft="@dimen/padding_15"
            android:layout_marginTop="-20dp"
            android:layout_marginRight="@dimen/padding_15"
            android:background="@drawable/bg_white_shadow"
            android:orientation="vertical"
            android:paddingTop="@dimen/padding_10"
            android:paddingBottom="@dimen/padding_10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/padding_15"
                android:paddingTop="@dimen/padding_10"
                android:paddingRight="@dimen/padding_15"
                android:text="已经有2000台机子成功在挖矿来售出"
                android:textColor="@color/acc3"
                android:textSize="@dimen/sp_14" />

            <EditText
                android:id="@+id/et_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_15"
                android:layout_marginTop="@dimen/padding_15"
                android:layout_marginRight="@dimen/padding_15"
                android:background="@drawable/edit_bg_acc9"
                android:hint="请输入您的手机号"
                android:padding="@dimen/padding_10"
                android:textSize="@dimen/text_size_16" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_15"
                android:paddingBottom="@dimen/padding_10"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_pre"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_15"
                    android:layout_marginRight="@dimen/dp_5"
                    android:layout_weight="1"
                    android:background="@drawable/edit_bg_397"
                    android:gravity="center"
                    android:paddingTop="@dimen/padding_10"
                    android:paddingBottom="@dimen/padding_10"
                    android:text="预约卖车"
                    android:textColor="@color/a397"
                    android:textSize="@dimen/text_size_16" />

                <TextView
                    android:id="@+id/tv_gujia"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_15"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:background="@drawable/edit_bg_397"
                    android:gravity="center"
                    android:paddingTop="@dimen/padding_10"
                    android:paddingBottom="@dimen/padding_10"
                    android:text="帮我估价"
                    android:textColor="@color/a397"
                    android:textSize="@dimen/text_size_16" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_below="@+id/ll"
            android:layout_marginTop="@dimen/padding_10"
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_10"
            android:background="@color/cf5"/>

        <TextView
            android:id="@+id/tv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll"
            android:layout_marginLeft="@dimen/padding_15"
            android:layout_marginTop="30dp"
            android:text="卖机流程"
            android:textColor="@color/acc3"
            android:textSize="@dimen/text_size_16" />

        <LinearLayout
            android:id="@+id/ll_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_1"
            android:layout_marginTop="@dimen/padding_10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@mipmap/ic_progress_1"
                android:drawablePadding="@dimen/dp_5"
                android:gravity="center"
                android:text="提交信息" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.5"
                android:drawableTop="@mipmap/ic_progress_point" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@mipmap/ic_progress_2"
                android:drawablePadding="@dimen/dp_5"
                android:gravity="center"
                android:text="提交信息" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.5"
                android:drawableTop="@mipmap/ic_progress_point" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@mipmap/ic_progress_3"
                android:drawablePadding="@dimen/dp_5"
                android:gravity="center"
                android:text="提交信息" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.5"
                android:drawableTop="@mipmap/ic_progress_point" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@mipmap/ic_progress_4"
                android:drawablePadding="@dimen/dp_5"
                android:gravity="center"
                android:text="提交信息" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_1"
            android:layout_marginLeft="@dimen/padding_15"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="@dimen/padding_10"
            android:text="成交历史"
            android:textColor="@color/acc3"
            android:textSize="@dimen/text_size_16" />
    </RelativeLayout>
</layout>