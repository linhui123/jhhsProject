<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white"
        android:orientation="vertical"
        android:paddingTop="@dimen/padding_10"
        android:paddingBottom="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/im_close"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:src="@mipmap/ic_close" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="@dimen/padding_15"
            android:layout_marginRight="25dp"
            android:text="确认付款金额"
            android:textColor="@color/acc3"
            android:textSize="@dimen/text_size_16" />

        <TextView
            android:id="@+id/num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:padding="@dimen/padding_10"
            android:text="￥2160.00"
            android:textColor="@color/ff1a"
            android:textSize="@dimen/text_size_20"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/coupon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/edit_bg_acc9"
            android:drawableRight="@mipmap/ic_down_397"
            android:padding="@dimen/padding_10"
            android:hint="请选择优惠券"
            android:textColor="@color/acc3"
            android:textSize="@dimen/text_size_16" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rl_ali"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rl_top"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="25dp"
                    android:paddingTop="@dimen/padding_10"
                    android:paddingBottom="@dimen/padding_10">

                    <TextView
                        android:id="@+id/tv_ali"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@mipmap/ic_pay_ali"
                        android:drawablePadding="@dimen/padding_10"
                        android:text="支付宝支付"
                        android:textColor="@color/acc3"
                        android:textSize="@dimen/text_size_16" />

                    <ImageView
                        android:id="@+id/im_ali"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:src="@mipmap/ic_shoping_s1" />
                </RelativeLayout>

                <View
                    style="@style/view_h_de"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp" />

                <RelativeLayout
                    android:id="@+id/rl_wx"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rl_ali"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="25dp"
                    android:paddingTop="@dimen/padding_10"
                    android:paddingBottom="@dimen/padding_10">

                    <TextView
                        android:id="@+id/tv_wx"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@mipmap/ic_pay_weixin"
                        android:drawablePadding="@dimen/padding_10"
                        android:text="微信支付"
                        android:textColor="@color/acc3"
                        android:textSize="@dimen/text_size_16" />

                    <ImageView
                        android:id="@+id/im_wx"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:src="@mipmap/ic_shoping_s" />
                </RelativeLayout>

                <View
                    style="@style/view_h_de"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp" />

                <TextView
                    android:id="@+id/tv_pay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="25dp"
                    android:background="@drawable/button_c397"
                    android:gravity="center"
                    android:padding="@dimen/padding_10"
                    android:text="去还款"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_16" />
            </LinearLayout>

            <com.jhhscm.platform.views.MaxHeightRecyclerView
                android:id="@+id/recyvleview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/edit_bg_acc9"
                android:paddingLeft="@dimen/padding_10"
                android:paddingRight="@dimen/padding_10"
                android:scrollbarStyle="outsideOverlay"
                app:maxHeight="160dp"
                android:scrollbars="vertical"
                android:visibility="gone"></com.jhhscm.platform.views.MaxHeightRecyclerView>
        </RelativeLayout>


    </LinearLayout>
</layout>